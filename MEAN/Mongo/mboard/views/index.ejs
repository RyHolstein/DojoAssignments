<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
  </head>
  <body>
    <h1>The Dojo message Board</h1>
    <form class="post_message" action="/" method="post">
      <p>Enter Name:<input type="text" name="name"></p>
      <p>Enter Message:<br><textarea name="content" rows="8" cols="80"></textarea></p>
      <input type="submit">
    </form>
    <h1>Messages</h1>
    <!-- loop for messages  -->
    <% for (var i = 0; i < messages.length; i++){%>
      <h3>Name: <%= messages[i].name %> </h3>
      <h3>Message: <%= messages[i].content %></h3>
        <!-- comments 4 for loops  -->
        <% for (var j = 0; j < messages[i].comments.length; j++){%>
          <p>Name: <%= messages[i].comments[j].name %></p>
          <p>Comment: <%= messages[i].comments[j].content %></p>
        <%}%>
      <form class="comment" action="/<%= messages[i]._id %>/comment" method="post">
        <p>Enter Name:<input type="text" name="name"></p>
        <p>Enter Comment:<br><textarea name="content" rows="3" cols="85"></textarea></p>
        <input type="submit">
      </form>
    <%}%>
  </body>
</html>
